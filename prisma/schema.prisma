// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Product {
    id               String @id @default(cuid())
    nombre           String
    precio           Int
    descripcion      String
    descripcionLarga String
    nombreImagen     String
    stock            Int
}

model Envio {
    id             String @id @default(cuid())
    CodigoPostal   Int
    Calle          String
    Colonia        String
    NumeroCasa     Int
    Telefono       String
    NombreCliente  String
    NombreProducto String
    PrecioProducto Int
}

model Blog {
    id          String @id @default(cuid())
    Title       String
    Image       String
    Description String
    MdContent   String
    HtmlContent String
}
